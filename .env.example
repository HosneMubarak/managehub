# Django Settings
DJANGO_SECRET_KEY="your-secret-key-here"
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=managehub.settings
DJANGO_ADMIN_URL="admin/"

# Site Configuration
SITE_NAME="ManageHub"
DEFAULT_FROM_EMAIL="admin@managehub.com"

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=managehub_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here

# Docker Environment
BUILD_ENVIRONMENT=local

# Email Configuration (for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles/

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/

# Security Settings (for development)
ALLOWED_HOSTS=localhost,127.0.0.1,web,nginx
CORS_ALLOWED_ORIGINS=http://localhost:800,http://127.0.0.1:8000

# Cache Configuration
REDIS_URL=redis://redis:6379/0

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
